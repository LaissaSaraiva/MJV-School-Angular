{
    "compilerOptions": {
        "outDir": "dist/js", // para qual diretorio quer que os arquivos compilados sejam enviados
        "target": "ES6", // versão do JS que vc quer que seja compilado;
        "noEmitOnError": true, // não vai complicar arquivo js, enquanto o TS esteja com erros com problema
        "noImplicitAny": true //
    },
    "include": ["app/**/*"] // incluir todos os arquivos desta pasta
}